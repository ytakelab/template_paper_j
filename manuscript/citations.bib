@article{krystalSubanestheticEffectsNoncompetitive1994,
  title = {Subanesthetic {{Effects}} of the {{Noncompetitive NMDA Antagonist}}, {{Ketamine}}, in {{Humans}}: {{Psychotomimetic}}, {{Perceptual}}, {{Cognitive}}, and {{Neuroendocrine Responses}}},
  shorttitle = {Subanesthetic {{Effects}} of the {{Noncompetitive NMDA Antagonist}}, {{Ketamine}}, in {{Humans}}},
  author = {Krystal, John H. and Karper, Laurence P. and Seibyl, John P. and Freeman, Glenna K. and Delaney, Richard and Bremner, J. Douglas and Heninger, George R. and Bowers, Jr, Malcolm B. and Charney, Dennis S.},
  year = {1994},
  month = mar,
  volume = {51},
